{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Current File",
            "type": "shell",
            "command": "mkdir -p build && rm -f build/${fileBasenameNoExtension} && g++ -std=c++11 -O2 -pthread \"${file}\" -o build/${fileBasenameNoExtension} && ./build/${fileBasenameNoExtension} ",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}